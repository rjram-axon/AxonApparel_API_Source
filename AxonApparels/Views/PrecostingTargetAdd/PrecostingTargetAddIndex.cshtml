                                        <label class="control-label col-md-4 col-sm-4 col-xs-12">
                                            Buyer
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <select id="ddlMBuyer" class="form-control select2" onchange="MainList();">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ex3">To Date</label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <input type="text" id="txtToDate" class="form-control" placeholder="Date">
                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <form class="form-horizontal form-label-left input_mask input_one">
                                    <div class="form-group">
                                        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="txtEntryDate">Ref No</label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <select id="ddlRefNo" class="form-control select2" onchange="MainList();"></select>
                                        </div>
                                    </div>
                                    <div class="form-group check_one">
                                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Order Type</label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            @*<input type="checkbox">
                                            Dispatched Orders *@
                                            <select id="ddlMOrderType" class="form-control select2" onchange="MainList();">

                                                <option value="0">--Select Order Type--</option>
                                                <option value="B">BULK ORDER</option>
                                                <option value="D">DOMESTIC</option>
                                            </select>
                                        </div>

                                    </div>

                                </form>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <form class="form-horizontal form-label-left input_mask input_one">
