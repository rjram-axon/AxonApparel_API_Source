                                        <label class="control-label col-md-4 col-sm-4 col-xs-12">
                                            Order No
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <select id="ddlOrderNo" class="form-control select2" onchange="MainList();">
                                            </select>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-4 col-sm-4 col-xs-2">
                                            <input type="checkbox" style="float: right;">
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-8" onchange="MainList();">
                                            Dispatched Orders
                                        </div>
                                    </div>

                                </form>
                            </div>



                        </div>
                        <div class="row">
                            <div class="form-group" style="text-align: right;">
                                <button type="button" class="btn btn-success" onclick="MainList();">List</button>

                            </div>
