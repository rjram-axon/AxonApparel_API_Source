                                    <div class="form-group">
                                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Company</label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <select id="ddlMCompany" class="form-control select2" onchange="MainList();">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ex3">From Date</label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <input type="text" id="txtFromDate" class="form-control" placeholder="Date">
                                        </div>
                                    </div>




                                </form>
                            </div>
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                <form class="form-horizontal form-label-left input_mask input_one">
