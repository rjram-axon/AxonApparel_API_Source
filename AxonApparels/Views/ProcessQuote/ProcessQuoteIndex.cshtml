@{
    ViewBag.Title = "ProcessQuoteIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #tPQMbody_paginate {
        display: none;
    }

    #tPQMbody_info {
        display: none;
    }

    #tPQMbody_length {
        display: none;
    }
      #tPQMbody_filter {
   width:auto;
    }
</style>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#txtFromDate').datepicker({ dateFormat: 'mm/dd/yy' });
        $('#txtToDate').datepicker({ dateFormat: 'mm/dd/yy' });
    });
</script>

<script src="~/Scripts/jquery.min.js"></script>

<script src="~/AxonScripts/Planning/ProcessQuote.js"></script>
<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>


        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">

                    <div class="clearfix"></div>
                    <div class="">

                        <div class="x_panel">
                            <div class="row">
                                <div class="row">
                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <form class="form-horizontal form-label-left input_mask">
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">Company</label>
                                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" onchange="CMainList();">
                                                    <select id="ddlMCompany" style="width:200px" class="form-control select2">
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                    Supplier
                                                </label>
                                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" onchange="SMainList();">
                                                    <select id="ddlMSupplier" style="width:200px" class="form-control select2">
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" for="ex3">
                                                       From Date
                                                    </label>
                                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" >                                                    
                                                    <input type="text" id="txtFromDate" style="width:200px" class="form-control" placeholder="Date">
                                                    </div>
                                                </div>



                                        </form>
                                    </div>


                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 ">

                                        <form class="form-horizontal form-label-left input_mask">
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                    Order No
                                                </label>
                                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" onchange="OMainList();">
                                                    <select id="ddlOrderNo" style="width:200px" class="form-control select2">
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" for="txtEntryDate">Buyer Ref No</label>
                                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">

                                                    <select id="ddlRefNo" style="width:200px" class="form-control select2" onchange="RMainList();">
                                                    </select>
                                                </div>
                                            </div>
                                             <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" for="ex3">
                                                       To Date
                                                    </label>
                                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">                                                    
                                                      <input type="text" style="width:200px" class="form-control" placeholder="Date" id="txtToDate">
                                                    </div>
                                                </div>
                                        </form>
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:left">
                                                Quote No
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" onchange="EMainList();">
                                                <select id="ddlEntryNo" style="width:200px" class="form-control select2">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="maxl col-md-12" style="margin-top:-5px;">
                                                <label class="radio inline">
                                                    <input id="General" class="Score" name="Otype" type="radio" value="G" checked="checked" onchange="RadioGClick();">
                                                    <span>General </span>
                                                </label>
                                                <label class="radio inline">
                                                    <input id="Order" class="Score" name="Otype" type="radio" value="B" onchange="RadioBClick();">
                                                    <span>Orders </span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="form-group" >
                                                    <button type="button" style="width: 70px;float:right" class="btn btn-success" onclick="ListDet();">List</button>
                                                </div>
                                            </div>
                                </div>
                            </div>
                        </div>
                        <div class="x_panel">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="LoadProcessQuoteEntry();">Add New </button>
                            <table id="tPQMbody" class="table table-striped table-bordered"></table>
                        </div>






                    </div>

            <link href="~/build/Login/jquery.dataTables.min.css" rel="stylesheet">
            @* Load datatable js *@
            @section Scripts{

                <script src="~/build/js/jquery.dataTables.min.js"></script>
                <script>
                                           
                </script>

            }



                    <!-- /page content -->




                    <!-- footer content -->


                    <!-- /footer content -->
                </div>
            </div>
        </div>
    </div>
</div>
