                                                    <select id="ddlinnerWorkdivision" class="form-control select2" style="width: 209px;">
                                                        @*onchange="SPMainlist();"*@
                                                    </select>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="form-group" style="display: none;">
                                            <label class="control-label col-md-4 col-sm-6 col-xs-12">
                                                Process
                                            </label>
                                            <div class="col-md-8 col-sm-9 col-xs-12">
                                                <select id="ddlMProcess" class="form-control select2" onchange="CMainlist();"></select>
                                            </div>
                                        </div>

                                        <div class="form-group">

                                            <div class="maxl" style="margin-left: 10px;">
                                                <label class="radio inline">
                                                    <input type="radio" checked value="P" name="UType" onclick="RadioMBClick();">
                                                    <span>Production Unit</span>
                                                </label>
                                                <label class="radio inline">
