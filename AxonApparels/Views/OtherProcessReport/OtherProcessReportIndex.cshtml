@{
    ViewBag.Title = "OtherProcessReportIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>OtherProcessReportIndex</h2>*@

<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#txtDeliDate').datepicker();
        $('#txtOrderDate').datepicker();
        $('#txtFromDate').datepicker();
        $('#txtToDate').datepicker();
    });
</script>

<script src="~/AxonScripts/Statement/Production/OtherProcessReport.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/AxonScripts/Common/jquery-3.3.1.js"></script>
<script src="~/AxonScripts/Common/jquery.dataTables.min.js"></script>
<script src="~/AxonScripts/Common/dataTables.scroller.min.js"></script>
<link href="~/AxonScripts/Common/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/AxonScripts/Common/scroller.dataTables.min.css" rel="stylesheet" />


<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="x_panel">

            <div class="x_panel">
                <div class="x_content">
                    <form class="form-inline">
                        <div class="row">
                            <div class="row">
                                <div style=" text-align: center;">
                                    <div class="form-group">
                                        <label style="font-size: 19px; white-space: nowrap; text-align: center;">
                                            Other Process Report
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="x_panel">
                <div class="x_content">

                    <div class="row">
                        <div class="row">
                            <div class="col-lg-2 col-md-1 col-sm-12 col-xs-12"></div>
                            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                                            <h2 style="text-align: center;">Tracking Options</h2>
                                <div class="">
                                    <form class="form-horizontal form-label-left input_mask">
                                        <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Company
                                            </label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMCompany" class="form-control select2" onchange="CMainlist();"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Buyer
                                            </label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMBuyer" class="form-control select2" onchange="CMainlist();"></select>
                                            </div>
                                        </div>                                        
                                        <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Order No
                                            </label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMOrderNo" class="form-control select2" onchange="CMainlist();"></select>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Ref No
                                            </label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMRefno" class="form-control select2" onchange="CMainlist();"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Style
                                            </label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMStyle" class="form-control select2" onchange="CMainlist();"></select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="maxl " style="margin-left: 10px; /* width: 200px; */margin-top: -5px;">
                                                <label class="radio inline">
                                                    <input type="radio" id="optoutext" name="outinternal" checked value="I" onclick="Changedropcont();">
                                                    <span>Processor</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" id="optoutint" name="outinternal" value="E" onclick="Changedropcont();">
                                                    @* onchange="CMainlist();"*@
                                                    <span>Work Division</span>
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group">

                                            <div id="Mprocess">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">Processor</label>
                                                @*for="txtEntryDate"*@
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                    <select id="ddlprocessor" class="form-control select2">
                                                        @* onchange="SPMainlist();"*@
                                                    </select>
                                                </div>
                                            </div>

                                            <div id="Mwork">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">Work Division</label>
                                                @*for="txtEntryDate"*@
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                    <select id="ddlinnerWorkdivision" class="form-control select2" style="width: 209px;">
                                                        @*onchange="SPMainlist();"*@
                                                    </select>
                                                </div>
                                            </div>

                                        </div>                                       
                                       
                                            <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                    Process
                                                </label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                    <select id="ddlMProcess" class="form-control select2" onchange="CMainlist();"></select>
                                                </div>
                                            </div>                                       
                                       
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                                            <h2 style="text-align:center;">Filter Options</h2>
                                <div class="">
                                    <form class="form-horizontal form-label-left input_mask">

                                        <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Item
                                            </label>
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMItem" class="form-control select2" onchange="CMainlist();"></select>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4">
                                                From Date
                                            </label>
                                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-8">
                                                <input type="text" id="txtFromDate" class="form-control " placeholder="Date">
                                            </div>
                                            <label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4">
                                                To Date
                                            </label>
                                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-8">
                                                <input type="text" id="txtToDate" class="form-control " placeholder="Date">
                                            </div>

                                        </div>

                                        <div class="form-group">
                                            <button type="button"  style="float: right; " class="btn btn-success" onclick="LoadReport();">Report</button>
                                            @*<button type="button" class="btn btn-primary">Export</button>*@
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-1">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <link href="~/build/Login/jquery.dataTables.min.css" rel="stylesheet">
        @* Load datatable js *@
        @section Scripts{

            <script src="~/build/js/jquery.dataTables.min.js"></script>
            <script>
                                           
            </script>

        }

    </div>
</div>
