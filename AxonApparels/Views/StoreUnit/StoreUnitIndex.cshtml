@{
    ViewBag.Title = "StoreUnitIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*margin-top: -28px;*@
<style>
    #tbody_filter {
        
    }
</style>
<script src="~/AxonScripts/StoreUnit.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<!-- page content -->

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Store Unit</h2>
                      
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="container">
                            @*<h2>Departments Record</h2>*@
                            @if(ViewBag.StoreunitAddFlg=="true")
                            {
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"  onclick="chk();">Add New Store</button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" disabled  >Add New Store</button>
                            }
                            <table id="tbody" class="table table-bordered table-hover">
                                @*<thead>
                                    <tr>
                                        <th style="visibility: hidden;">ID
                                        </th>
                                        <th>Country Name
                                        </th>
                                        <th>LookUp
                                        </th>                                        
                                        <th>Status
                                        </th>
                                        <th>Action
                                        </th>
                                    </tr>
                                </thead>*@
                                @*<tbody class="tbody">
                                </tbody>*@
                            </table>
                        </div>
                    @* Load datatable css *@

                <link href="~/build/Login/jquery.dataTables.min.css" rel="stylesheet">
                @* Load datatable js *@
                @section Scripts{

                    <script src="~/build/js/jquery.dataTables.min.js"></script>
                    <script>
                                           
                    </script>

                }

                        <div class="modal fade" style="overflow-y:scroll" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false"  aria-hidden="true">
                            <div class="modal-dialog" style="min-width: 0px;">
                                <div class="x_panel" style="width: 103%;">
                                    <div class="x_title">
                                        <h2>Add Store</h2>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="modal-body row">
                                        <div class="x_content">
                                            <div class="x_panel">
                                                <div class="">
                                                    <div class="form-group">
                                                        <div class="maxl" style="margin-top: -6px;">
                                                            <label class="radio inline">
                                                                <input type="radio" checked value="M" id="optMS" name="MSType" onclick="LoadMainStore();">
                                                                <span>Main Store</span>
                                                            </label>
                                                            <label class="radio inline">
                                                                <input type="radio" value="S" id="optSS" name="MSType" onclick="LoadSubStore();">
                                                                <span>Sub Store</span>
                                                            </label>
                                                            <label class="radio inline">
                                                                <input type="radio" value="E" id="optES" name="MSType" onclick="LoadSecStore();">
                                                                <span>Section Store</span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="row" id="MainStoreId">
                                                        <form class="form-horizontal form-label-left input_mask">
                                                            <div class="form-group col-md-8 col-sm-8 col-xs-12">
                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtEntryDate">Company</label>
                                                                <div class="col-md-9 col-sm-9 col-xs-12">
                                                                    <select id="ddlMSCompany" class="form-control">
                                                                    </select>
                                                                </div>
                                                                
                                                            </div>

                                                           
                                                        </form>
                                                    </div>
                                                    <div class="" id="SubStoreId">
                                                        <div class="maxl" style="margin-top: -17px;">
                                                            <label class="radio inline">
                                                                <input type="radio" checked value="SM" id="optSMS" name="SMSType" onclick="RadioSMClick();">
                                                                <span>Main Store</span>
                                                            </label>
                                                            <label class="radio inline">
                                                                <input type="radio" value="SP" id="optSSS" name="SMSType" onclick="RadioSSPClick();">
                                                                <span>Prodution List</span>
                                                            </label>

                                                        </div>
                                                        <form class="form-horizontal form-label-left input_mask">
                                                            <div class="row" id="SubStoreMainId">
                                                                <div class="form-group col-md-8 col-sm-8 col-xs-12">
                                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtEntryDate">Main Store</label>
                                                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                                                        <select id="ddlSCompany" class="form-control">
                                                                        </select>
                                                                    </div>
                                                                    
                                                                </div>

                                                                    
                                                            </div>
                                                            <div id="SubStorPrdId">
                                                                <div class="form-group col-md-8 col-sm-8 col-xs-12">
                                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtEntryDate">Production Unit</label>
                                                                    <div class="col-md-4 col-sm-9 col-xs-12">
                                                                        <select id="ddlSStorePunit" class="form-control">
                                                                        </select>
                                                                    </div>
                                                                    
                                                                </div>

                                                                <div class="form-group ">
                                                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtEntryDate">Sub Store</label>
                                                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                                                        <select id="ddlSStoreSub" class="form-control">
                                                                        </select>
                                                                    </div>
                                                                    
                                                                </div>
                                                            </div>

                                                        </form>
                                                    </div>

                                                    <div class="row" id="SecStoId">
                                                        <form class="form-horizontal form-label-left input_mask">
                                                           

                                                            <div class="form-group col-md-8 col-sm-8 col-xs-12">
                                                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtEntryDate">Work Division</label>
                                                                <div class="col-md-9 col-sm-9 col-xs-12">
                                                                    <select id="ddlWK" class="form-control">
                                                                    </select>
                                                                </div>
                                                                
                                                            </div>
                                                           
                                                        </form>
                                                    </div>
                                                </div>
                                                <div class="row">
                                               
                                                <div class="col-md-8 col-sm-8 col-xs-12">
                                                    <form class="form-horizontal form-label-left">
                                                        <div class="form-group" style="display: none;">
                                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Store ID</label>
                                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                                <input type="text" name="txtsectionid" id="StoreUnitId" placeholder="Enter Section Id" class="form-control col-md-10">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                                                Store Name
                                                            <span style="color: red;">*</span></label>
                                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                                <input type="text" name="country" id="Name" placeholder="Store Name" class="form-control col-md-10" >
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-3 col-sm-3 col-xs-12 control-label">
                                                                Status
                                                 
                                                            </label>

                                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                                <div class="checkbox">
                                                                    <label>
                                                                        <input type="checkbox" id="Status" value="" >
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                               
                                                </div>



                                            </div>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <span class="text-muted"><em><span style="color: red;">*</span>Indicates required field</em></span>
                                    </div>

                                    <div class="modal-footer" style="border:none;">
                                        <button type="button" class="btn btn-success" id="btnAdd" onclick="return Add();">Save</button>
                                        <button type="button" class="btn btn-success" id="btnUpdate" style="display: none;" onclick="Update();">Update</button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal fade" id="AlertModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true" style="margin-top: -30px;">
                            <div class="modal-dialog" style="min-width: 160px">
                                <div class="row">
                                    
                                    <div></div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="col-md-2 col-sm-2 col-xs-2"></div>
                                        <div id="dvUserdetails" class="col-md-8 col-sm-8 col-xs-12"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page content -->
