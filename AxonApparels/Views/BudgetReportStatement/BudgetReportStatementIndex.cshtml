@{
    ViewBag.Title = "BudgetReportStatementIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#txtDeliDate').datepicker();
        $('#txtOrderDate').datepicker();
        $('#txtFromDate').datepicker({ dateFormat: 'dd/mm/yy' });
        $('#txtToDate').datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>


<script src="~/AxonScripts/Statement/Planning/BudgetReport.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/AxonScripts/Common/jquery-3.3.1.js"></script>
<script src="~/AxonScripts/Common/jquery.dataTables.min.js"></script>
<script src="~/AxonScripts/Common/dataTables.scroller.min.js"></script>
<link href="~/AxonScripts/Common/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/AxonScripts/Common/scroller.dataTables.min.css" rel="stylesheet" />
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix">
        </div>
        <div class="x_panel">
            <div class="x_panel">
                <div class="x_content">
                    <form class="form-inline">
                        <div class="row">
                            <div class="row">
                                <div style="text-align: center;">
                                    <div class="form-group">
                                        <label style="font-size: 19px; white-space: nowrap; ">
                                            Budget Report
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="x_panel">
                <div class="x_content">
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-2 col-md-1 col-sm-0 col-xs-0"></div>
                            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                                <div>
                                    <form class="form-horizontal form-label-left input_mask">
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Company
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMCompany" class="form-control select2" onchange=""></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Unit
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMUnit" class="form-control select2" onchange=""></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Buyer
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMBuyer" class="form-control select2" onchange=""></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                               Job No
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMJobNo" class="form-control select2" onchange=""></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4">
                                                From Date
                                            </label>
                                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-8">
                                                <input type="text" id="txtFromDate" class="form-control" style=" " placeholder="Date">
                                            </div>
                                            <label class="control-label col-lg-3 col-md-3 col-sm-3 col-xs-4">
                                                To Date
                                            </label>
                                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-8">
                                                <input type="text" id="txtToDate" class="form-control " placeholder="Date">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
                                <div class="">
                                    <form class="form-horizontal form-label-left input_mask">
                                         <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                               Style
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMStyle" class="form-control select2" onchange=";"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                               Order No
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMOrderNo" class="form-control select2"  tabindex="-1" aria-autocomplete="list" aria-sort="none" role="combobox" multiple="multiple" name="multiple" onchange="myOrder(this.value)">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                               Ref No
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMRefNo" class="form-control select2"  tabindex="-1" aria-autocomplete="list" aria-sort="none" role="combobox" multiple="multiple" name="multiple" onchange="myRef(this.value)">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group" style="display:none">
                                            <div class="maxl" style="margin-top: -5px;margin-left:10px">
                                                <label class="radio inline">
                                                    <input type="radio" checked value="B" id="Pending" name="proctype" onchange="">
                                                    <span>Pending</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" value="A" id="Approval" name="proctype" onchange="">
                                                    <span>Approval</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" value="C" id="all" name="proctype" onchange="">
                                                    <span>All</span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group" style="margin-left:10px">
                                            <input type="checkbox" name="BudgetR" value="A" id="InStore" checked />
                                            Store &nbsp
                                            <input type="checkbox" name="BudgetR" value="F" id="InFabric"  />
                                            Fabric &nbsp
                                            <input type="checkbox" name="BudgetR" value="P" id="InProd"  />
                                            Production &nbsp
                                        </div>
                                        <div class="form-group" style="float: right;">
                                            <button type="button" class="btn btn-success" onclick="LoadReport();">Report</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <link href="~/build/Login/jquery.dataTables.min.css" rel="stylesheet">
            @* Load datatable js *@
            @section Scripts{

                <script src="~/build/js/jquery.dataTables.min.js"></script>
                <script>
                                           
                </script>

            }
        </div>
    </div>
</div>

