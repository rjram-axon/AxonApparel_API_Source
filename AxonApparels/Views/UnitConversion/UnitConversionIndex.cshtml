                        }


                        <div class="modal fade" style="overflow-y:scroll" id="myModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>Add Unit Conversion</h2>
                                        @*  <ul class="nav navbar-right panel_toolbox">
                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                            </li>
                                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                                            </li>
                                        </ul>*@
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="modal-body row">
                                        <div class="x_panel">
                                            <div class="row">
                                                <form class="form-horizontal form-label-left">
                                                    <div class="form-group" style="display: none;">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">ID</label>
                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <input type="text" name="UcID" id="UcID" placeholder="UC Id" class="form-control col-md-10">
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">From Uom <span style="color: red;">*</span></label>
                                                        <div class="col-md-8 col-sm-8 col-xs-11">
                                                            <select id="ddlfromuom" class="form-control"></select>
                                                        </div>
                                                        <div class="col-md-1 col-sm-1 col-xs-1">
                                                            @*<select id="ddlCountry" class="form-control"></select>*@
                                                            <button type="button" data-toggle="tooltip" data-placement="top" title="Add From Uom" class="btnadduom btn btn-primary add_btn"><i class="fa fa-plus"></i></button>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">To Uom <span style="color: red;">*</span></label>
                                                        <div class="col-md-8 col-sm-8 col-xs-11">
                                                            <select id="ddltouom" class="form-control"></select>
                                                        </div>
                                                        <div class="col-md-1 col-sm-1 col-xs-1">
                                                            @*<select id="ddlCountry" class="form-control"></select>*@
                                                            <button type="button" data-toggle="tooltip" data-placement="top" title="Add To Uom" class="btnadduom btn btn-primary add_btn"><i class="fa fa-plus"></i></button>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Conversion <span style="color: red;">*</span></label>
                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <input type="text" name="conversion" id="conversion" placeholder="Conversion" class="form-control col-md-10">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Mode</label>
                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <select id="ddlmode" class="form-control">
                                                                <option value="" selected>--Select--</option>
                                                                <option value="1">Divide</option>
                                                                <option value="2">Multiply</option>
                                                            </select>

                                                        </div>
                                                    </div>


                                                    <div class="form-group">
                                                        <label class="col-md-3 col-sm-3 col-xs-12 control-label">
                                                            Status
                                                    <br>
                                                        </label>

                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox" id="Status" value="">
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>


                                                </form>
                                            </div>
                                        </div>
                                        <div class="modal-footer" style="border: none;">
                                            <button type="button" class="btn btn-success" id="btnAdd" onclick="return Add();">Save</button>
                                            <button type="button" class="btn btn-success" id="btnUpdate" style="display: none;" onclick="Update();">Update</button>
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" style="overflow-y:scroll" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>Add Unit Of Measurement</h2>

                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="modal-body">
                                        <div class="x_content">
                                            <div class="x_panel">

                                                <form class="form-horizontal form-label-left">
                                                    <div class="form-group" style="display: none;">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Uom ID</label>
                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <input type="text" name="UomID" id="UomID" placeholder="Uom Id" class="form-control col-md-10">
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">UOM<span style="color: red;"> *</span></label>
                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <input type="text" name="Uom" id="Uom" placeholder="Uom" class="form-control col-md-10">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Abbreviation</label>
                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <input type="text" name="abbreviation" id="abbreviation" placeholder="Abbreviation" class="form-control col-md-10">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">IsDecimal</label>
                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <select id="ddldeci" class="form-control">
                                                                <option value="" selected>--Select--</option>
                                                                <option value="1">Yes</option>
                                                                <option value="2">No</option>
                                                            </select>

                                                        </div>
                                                    </div>


                                                    <div class="form-group">
                                                        <label class="col-md-3 col-sm-3 col-xs-12 control-label">
                                                            Status
                                                    <br>
                                                        </label>

                                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                                            <div class="checkbox">
                                                                <label>
                                                                    <input type="checkbox" id="Statusuom" value="">
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <span class="text-muted"><em><span style="color: red;">*</span>Indicates required field</em></span>
                                    </div>
                                    <div class="modal-footer" style="border: 0px solid">
                                        <button type="button" class="btn btn-success" id="btnAdduom" onclick="return Adduom();">Save</button>
                                        @*<button type="button" class="btn btn-success" id="btnUpdate" style="display: none;" onclick="Update();">Update</button>*@
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
