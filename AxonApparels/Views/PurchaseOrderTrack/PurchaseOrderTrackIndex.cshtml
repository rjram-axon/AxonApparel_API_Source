        <div class="x_panel">

            <div class="x_panel">
                <div class="x_content">
                    <form class="form-inline">
                        <div class="row">
                            <div class="row">
                                <div style="text-align:center;">
                                    <div class="form-group">
                                        <label style="font-size: 19px; white-space: nowrap;">
                                           Purchase / Issue Tracking Report
                                        </label>
                                    </div>
                                </div>                           
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
