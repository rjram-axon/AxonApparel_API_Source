                                         <label class="radio inline">
                                            <input type="radio" value="A" name="PoType" onclick="RadioMAClick();">
                                            <span>Accessory</span>
                                        </label>
                                       
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="maxl " style="margin-left: 10px;   ">
                                        <label class="radio inline">
                                            <input type="radio" checked value="L" name="MLocal" onclick="RadioMLClick();">
                                            <span>Local Purchase</span>
                                        </label>
                                        <label class="radio inline">
                                            <input type="radio" value="I" name="MLocal" onclick="RadioMLClick();">
                                            <span>Import</span>
                                        </label>
                                         <label class="radio inline">
                                            <input type="radio" value="" name="MLocal" onclick="RadioMLClick();">
                                            <span>All</span>
                                        </label>
                                       
                                    </div>
                                </div>
                               <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                To Date
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                 <input type="text" id="txtToDate" class="form-control " placeholder="Date">
                                            </div>
                                    </div>

                                 <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                     Delivery to
