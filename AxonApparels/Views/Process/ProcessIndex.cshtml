@{
    ViewBag.Title = "ProcessIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@* margin-top: -28px;*@
<style>
    #tbody_filter {
    }
</style>
<script src="~/AxonScripts/Process.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<!-- page content -->


<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Process</h2>

                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <div class="container">
                            @*<h2>Departments Record</h2>*@
                            @if (ViewBag.ProcessAddFlg == "true")
                            {
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false" onclick="clearTextBox();">Add New Process</button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false" disabled>Add New Process</button>
                            }

                            <table id="tbody" class="table table-bordered table-hover">
                                @*<thead>
                                    <tr>
                                        <th style="visibility: hidden;">ID
                                        </th>
                                        <th>Country Name
                                        </th>
                                        <th>LookUp
                                        </th>                                        
                                        <th>Status
                                        </th>
                                        <th>Action
                                        </th>
                                    </tr>
                                </thead>*@
                                @*<tbody class="tbody">
                                </tbody>*@
                            </table>
                        </div>
                        @* Load datatable css *@

                        <link href="~/build/Login/jquery.dataTables.min.css" rel="stylesheet">
                        @* Load datatable js *@
                        @section Scripts{

                            <script src="~/build/js/jquery.dataTables.min.js"></script>
                            <script>
                                           
                            </script>

                        }

                        <div class="modal fade" style="overflow-y:scroll" id="myModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="x_panel" style="width: 103%;">
                                    <div class="x_title">
                                        <h2>Add Process</h2>

                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="modal-body row">
                                        <div class="x_content">
                                            <div class="x_panel">
                                                <div class="row">
                                                    <form class="form-horizontal form-label-left">
                                                        <div class="form-group" style="display: none;">
                                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Process ID</label>
                                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                                <input type="text" name="Process" id="ProcessID" placeholder="Process Id" disabled="disabled" style="display: none" class="form-control col-md-10">
                                                            </div>
                                                        </div>

                                                        <div class="form-group col-md-8 col-sm-8 col-xs-12">
                                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Process <span style="color: red;">*</span></label>
                                                            <div class="col-md-9 col-sm-9 col-xs-12">
                                                                <input type="text" name="Process" id="Name" placeholder="Process Name" class="form-control col-md-10">
                                                            </div>
                                                        </div>



                                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                                            <div class="form-group">
                                                                <div class="maxl" style="margin-left: 10px;">
                                                                    <label class="radio inline">
                                                                        <input type="radio" class="flat" checked id="Process" name="ProcessType" value="1">
                                                                        <span>Process </span>
                                                                    </label>
                                                                    <label class="radio inline">
                                                                        <input type="radio" class="flat" id="Production" name="ProcessType" value="2">
                                                                        <span>Production </span>
                                                                    </label>
                                                                </div>

                                                                 <div class="checkbox" style="margin-left: 22px;">

                                                                    @*<input type="checkbox" class="flat" checked="checked" id="IsComponentProcess">
                                                                    Is Component Process*@

                                                                       <input type="checkbox" class="flat" checked="checked" id="IsComponentProcess">
                                                                    Is Emblishment Process
                           
                                                                </div>
                                                                <div class="checkbox" style="margin-left: 22px;">

                                                                    <input type="checkbox" class="flat" checked="checked" id="IsProcessValidateOrdQty">
                                                                    Is Validate Process Order Qty
                           
                                                                </div>
                                                                <div class="checkbox" style="margin-left: 22px;">

                                                                    <input type="checkbox" class="flat" checked="checked" id="InpOutPro">
                                                                    Input/Output Is Proportion
                           
                                                                </div>
                                                                <div class="checkbox" style="margin-left: 22px;">

                                                                    <input type="checkbox" class="flat" checked="checked" id="AllLotNum">
                                                                    Allow Lot Number Generation
                           
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label col-md-4 col-sm-4 col-xs-12">
                                                                    Program Input
                                                                </label>
                                                                <div class="col-md-8 col-sm-8 col-xs-12">
                                                                    <select id="ddlinput" class="form-control">
                                                                    </select>
                                                                </div>

                                                            </div>                                                      
                                                             <div class="form-group">
                                                                <label class="control-label col-md-4 col-sm-4 col-xs-12">
                                                                    Program Output
                                                                </label>
                                                                <div class="col-md-8 col-sm-8 col-xs-12">
                                                                    <select id="ddloutput" class="form-control">
                                                                    </select>
                                                                </div>

                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label col-md-4 col-sm-4 col-xs-12">
                                                                    Process Loss
                                                                </label>
                                                                <div class="col-md-8 col-sm-8 col-xs-12">
                                                                    <input type="text" name="ProcessLoss" id="ProcessLoss" placeholder="ProcessLoss" class="form-control col-md-10">
                                                                </div>

                                                            </div>
                                                            <div class="form-group">
                                                                <label class="col-md-4 col-sm-4 col-xs-12 control-label" style="margin-top: 5px;">
                                                                    Status
                                                 
                                                                </label>

                                                                <div class="col-md-8 col-sm-8 col-xs-12">
                                                                    <div class="checkbox">
                                                                        <label>
                                                                            <input type="checkbox" id="Status" value="">
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>





                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <span class="text-muted"><em><span style="color: red;">*</span>Indicates required field</em></span>
                                    </div>
                                    <div class="modal-footer" style="border: 0px solid">
                                        <button type="button" class="btn btn-success" id="btnAdd" onclick="return Add();">Save</button>
                                        <button type="button" class="btn btn-success" id="btnUpdate" style="display: none;" onclick="Update();">Update</button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                       <div class="modal fade" id="AlertModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true" style="margin-top: -30px;">
                            <div class="modal-dialog" style="min-width: 160px">
                                <div class="row">
                                    
                                    <div></div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="col-md-2 col-sm-2 col-xs-2"></div>
                                        <div id="dvUserdetails" class="col-md-8 col-sm-8 col-xs-12"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- page content -->
