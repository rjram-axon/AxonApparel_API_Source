@{
    ViewBag.Title = "PcStatementIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#txtDeliDate').datepicker({ dateFormat: 'dd/mm/yy' });
        $('#txtOrderDate').datepicker({ dateFormat: 'dd/mm/yy' });
        $('#txtFromDate').datepicker({ dateFormat: 'dd/mm/yy' });
        $('#txtToDate').datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>


<script src="~/AxonScripts/Statement/PurCancelReport.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/AxonScripts/Common/jquery-3.3.1.js"></script>
<script src="~/AxonScripts/Common/jquery.dataTables.min.js"></script>
<script src="~/AxonScripts/Common/dataTables.scroller.min.js"></script>
<link href="~/AxonScripts/Common/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/AxonScripts/Common/scroller.dataTables.min.css" rel="stylesheet" />


<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="x_panel">

            <div class="x_panel">
                <div class="x_content">
                    <form class="form-inline">
                        <div class="row">
                            <div class="row">
                                <div  style=" text-align: center;">
                                    <div class="form-group">
                                        <label style="font-size: 19px; white-space: nowrap;">
                                            Purchase Cancel Statement
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                       
                        <div class="row">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <form class="form-horizontal form-label-left input_mask">
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Company
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMCompany" class="form-control"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                           
                                             <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">Order No</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                            @*<select id="ddlAOrderNo" class="form-control" multiple="multiple" name="multiple" onchange="myOrder(this.value);">
                                            </select>*@
                                             <select id="ddlAOrderNo" class="form-control select2"  tabindex="-1" aria-autocomplete="list" aria-sort="none" role="combobox" multiple="multiple" name="multiple" onchange="myOrder(this.value);">
                                                        </select>
                                        </div>
                                        </div>
                                       
                                           <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Item Group
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMItemGroup" class="form-control" onchange="CMainlist();">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Pur Order
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMPurord" class="form-control" onchange="CMainlist();">
                                                </select>
                                            </div>
                                        </div>
                                        
                                        
                                       
                                     
                                    </form>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <form class="form-horizontal form-label-left input_mask">

                                      
                                        <div class="form-group">
                                            <div class="maxl " style="margin-left: 10px; /* width: 200px; */margin-top: -5px;">
                                                <label class="radio inline">
                                                    <input type="radio" checked value="L" name="loctype" >
                                                    <span>Local Purchase</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" value="I" name="loctype" >
                                                    <span>Import</span>
                                                </label>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">Ref No</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                            @*<select id="ddlARefNo" class="form-control" multiple="multiple" name="multiple" onchange="myRef(this.value);">
                                            </select>*@
                                             <select id="ddlARefNo" class="form-control select2"  tabindex="-1" aria-autocomplete="list" aria-sort="none" role="combobox" multiple="multiple" name="multiple" onchange="myRef(this.value);">
                                                        </select>
                                        </div>
                                        </div>
                                       <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Supplier
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMSupplier" class="form-control">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group" style="visibility:hidden">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Pur Ord No
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMPurOrdNo" class="form-control" onchange="CMainlist();">
                                                </select>
                                            </div>
                                        </div>
                                        
                                        
                                    </form>
                                </div>

                            
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <form class="form-horizontal form-label-left input_mask">
                                         <div class="form-group">
                                           

                                             <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">Style</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                            <select id="ddlMStyle" class="form-control" multiple="multiple" name="multiple" onchange="mystyle(this.value);">
                                            </select>
                                        </div>
                                            </div>
                                         
                                        <div class="form-group">
                                            <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                Buyer
                                            </label>
                                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                <select id="ddlMBuyer" class="form-control"></select>
                                            </div>
                                        </div>
                                     <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                        From Date
                                                    </label>
                                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                        <input type="text" id="txtFromDate" class="form-control " placeholder="Date">
                                                    </div>
                                                </div>
                                                



                                    </form>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <form class="form-horizontal form-label-left input_mask">
                                        
                                       <div class="form-group">
                                            <div class="maxl " style="margin-left: 10px; /* width: 200px; */margin-top: -5px;">
                                                <label class="radio inline">
                                                    <input type="radio" checked value="A" name="proctype" >
                                                    <span>All</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" value="Y" name="proctype" >
                                                    <span>Yarn</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" value="W" name="proctype" >
                                                    <span>Accessory</span>
                                                </label>
                                            </div>
                                        </div>

                                          <div class="form-group">
                                        <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">Item</label>
                                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                            <select id="ddlAitem" class="form-control" multiple="multiple" name="multiple" onchange="myItem(this.value);">
                                            </select>
                                        </div>
                                    </div>
                                        <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                                        To Date
                                                    </label>
                                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                                        <input type="text" id="txtToDate" class="form-control " placeholder="Date">
                                                    </div>
                                                </div>


                                    </form>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                   <div class="form-group">
                                            <div class="maxl " style="margin-left: 10px; margin-top: -5px;">
                                                <label class="radio inline">
                                                    <input type="radio" checked value="B" name="ordtype" >
                                                    <span>Order Purchase</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" value="G" name="ordtype" >
                                                    <span>General Purchase</span>
                                                </label>
                                                <label class="radio inline">
                                                    <input type="radio" value="S" name="ordtype" >
                                                    <span>Sample Purchase</span>
                                                </label>
                                            </div>
                                        </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                   <button type="button" class="btn btn-success" onclick="LoadReport();" style="float:right">Report</button>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


  
            <link href="~/build/Login/jquery.dataTables.min.css" rel="stylesheet">
